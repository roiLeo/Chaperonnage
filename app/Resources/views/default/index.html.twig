        <script src="https://maps.googleapis.com/maps/api/js?key=AIzaSyC-TozRWtnMZroNu6HOGostbH4RVwIhLj4&libraries=places"
                async defer></script>
    {% endblock %}


{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="http://ajax.googleapis.com/ajax/libs/angular_material/1.1.0/angular-material.min.css">
    <link rel="stylesheet" href="https://cdn.rawgit.com/indrimuska/angular-moment-picker/master/dist/angular-moment-picker.min.css">
    <link rel="stylesheet" href="{{ asset('bundles/app/css/index.css') }}">
{% endblock %}

{% block content %}
    <ng-view ng-app='myApp'></ng-view>
{% endblock %}